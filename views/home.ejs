<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="home.css">
</head>
<body>
    <nav>
        <ul>
            <li><a href="/createpost"><button>Create Post</button></a></li>
        </ul>
    </nav>
    <h1><%= message %></h1>
    <% if(userRole != "admin"){ %>
        <% userblogs.blogs.forEach((ele, ind) => { %>
            <div class="author-div">
                <br>
                <br>
                <img src="<%= ele.filepath %>" alt="Thumbnail image">
                <h1><%= ele.title %></h1>
                <p><%= ele.content %></p>
                <br>
                <a href="/updatepost/<%= ind %> "><button>Update Post</button></a>
                <br>
            </div>
        <% }) %>
    <% } %>
</body>
</html>